<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp"
                android:text="Tambah Formula"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNameFormula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:hint="Nama Formula"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etValPh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:hint="Nilai pH Air"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etValPpm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:hint="Nilai PPM"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/imageFormula"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:background="@color/white_smoke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChooseImage"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/imgFormula"
                    android:backgroundTint="@color/white"
                    android:text="@string/choose_image"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/green"
                    app:strokeWidth="1.5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddFormula"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_below="@id/btnChooseImage"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_toEndOf="@id/imgFormula"
                    android:backgroundTint="@color/green"
                    android:text="Tambah"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/green"
                    app:strokeWidth="1.5dp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDismiss"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:padding="8dp"
            android:src="@drawable/ic_close" />
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>